<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@color/dark_blue">

    <TextView
        android:id="@+id/mining_account_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="MiningAccount"
        android:textColor="@color/white"
        android:fontFamily="@font/lemon_milk_light"
        android:gravity="center"
        android:textSize="18sp"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/yellow_light"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/status_block"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/block_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Status"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        />

                    <ImageButton
                        android:id="@+id/switch_status_form"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_expand_more_24"
                        android:background="@color/transparent"
                        android:layout_marginEnd="5dp"
                        android:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/status_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="15m hashrate"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/fifteen_hashrate"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="24h hashrate"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/twenty_four_hashrate"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="75dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="Online workers"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/num_of_workers"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="100dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:text="Received for today"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/received_for_today"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="125dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:text="Received for yesterday"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/received_for_yesterday"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="150dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:text="Ethereum cost"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/ethereum_cost"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/curve_block"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/block_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Hashrate curve"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/switch_hashrate_form"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_baseline_expand_more_24"
                        android:tint="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/curve_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="0dp"
                    android:visibility="visible">

                    <com.invisibles.minestats.Graphics.GraphicHash
                        android:id="@+id/hashrate_curve"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

    <include
        android:id="@+id/update_all_block"
        layout="@layout/new_version_block"
        android:visibility="gone"
        />

    <include
        android:id="@+id/main_spin"
        layout="@layout/spin_loading"
        android:visibility="gone"
        />

</RelativeLayout>