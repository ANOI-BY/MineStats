<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/update_block_empty_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_50"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:id="@+id/update_block"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/other_block_radius"
        >

        <TextView
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="New version available"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/lemon_milk_light"
            />

        <TextView
            android:id="@+id/update_new_version"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="0.0.0"
            android:layout_alignParentTop="@+id/update_title"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/lemon_milk_light"
            />

        <Button
            android:id="@+id/update_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent"
            android:foreground="@drawable/button_yellow_radius"
            android:text="UPDATE"
            android:fontFamily="@font/lemon_milk_light"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>